<form accept-charset="UTF-8" action="<%= url("/customers")%>" method="post" class="form-signin">
  <h2 class="form-signin-heading">Please registr</h2>
  <div class="form-group">
    <label for="customer_firstname" class="control-label">First Name*</label>
    <div class="controls">
      <input type="text" id="customer_firstname" name="customer[firstname]" class="form-control" value="<%= @customer[:firstname] if @customer %>" required="required" autofocus />
    </div>
  </div>
  <div class="form-group">
    <label for="customer_lastname" class="control-label">Last Name*</label>
    <div class="controls">
      <input type="text" id="customer_lastname" name="customer[lastname]" class="form-control" value="<%= @customer[:lastname] if @customer %>" required="required" />
    </div>
  </div>
  <div class="form-group">
    <label for="customer_email" class="control-label">Email*</label>
    <div class="controls">
      <input type="email" id="customer_email" name="customer[email]" class="form-control" value="<%= @customer[:email] if @customer %>" required="required" />
    </div>
  </div>
  <div class="form-group">
    <label for="customer_password" class="control-label">Password*</label>
    <div class="controls">
      <input type="password" id="customer_password" name="customer[password]" class="form-control" required="required" />
    </div>
  </div>
  <div class="form-group">
    <label for="customer_password_confirmation" class="control-label">Password confirmation*</label>
    <div class="controls">
      <input type="password" id="customer_password_confirmation" name="customer[password_confirmation]" class="form-control" required="required" />
    </div>
  </div>

  <div class="form-group">
    <div class="controls">
      <button type="submit" class="btn btn-primary btn-block">Register</button>
    </div>
  </div>
</form>